<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/title_border"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/CommentUser"
            android:textStyle="italic"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="User Name" />

        <TextView
            android:id="@+id/commentID"
            android:layout_width="wrap_content"
            android:layout_weight="0.6"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="User bhcbcvbfgvbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbdddddddddddddddddddddd"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/likedislikeLayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/likeCommentbtn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_thumb_up_black_24dp" />

        <TextView
            android:id="@+id/likeNum"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/dislikeCommentbtn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_thumb_down_black_24dp" />

        <TextView
            android:id="@+id/dislikeNum"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:text="0" />

        <ImageButton
            android:id="@+id/commentCommentIconBtn"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@android:color/white"
            android:src="@drawable/ic_comment_black_24dp" />

        <TextView
            android:id="@+id/commentNum"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:text="0" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/background_dark"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:id="@+id/CommentLayout">

        <EditText
            android:id="@+id/editCommentsl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:padding="2dp"
            android:layout_weight=".8"
            android:layout_marginLeft="1dp"
            android:background="@drawable/edittextborder"
            android:inputType="textMultiLine"
            android:hint="Type a comment"/>
        <ImageView
            android:id="@+id/commentBtnsl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/post_comment"
            android:layout_weight=".2"
            android:padding="6dp"/>
    </LinearLayout>
</LinearLayout>
