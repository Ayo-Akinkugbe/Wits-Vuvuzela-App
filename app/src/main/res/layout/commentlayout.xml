<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/comment_border"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/CommentUser"
            android:textStyle="italic"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textColor="#ffff"
            android:layout_height="wrap_content"
            android:text="User Name" />

        <TextView
            android:id="@+id/commentID"
            android:layout_width="wrap_content"
            android:layout_weight="0.6"
            android:textColor="#ffff"
            android:layout_height="wrap_content"
            android:text="User bhcbcvbfgvbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbdddddddddddddddddddddd"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/likedislikeLayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/likeCommentbtn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/likebw" />

        <TextView
            android:id="@+id/likeNum"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Like"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/dislikeCommentbtn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/dislikebw" />

        <TextView
            android:id="@+id/dislikeNum"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Dislike" />

        <ImageButton
            android:id="@+id/commentCommentIconBtn"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@android:color/white"
            app:srcCompat="@drawable/comments3" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/background_dark"
        android:text="TextView" />

</LinearLayout>
